<launch>

  <!-- Run self-filter -->
  <node name="laser_filter" pkg="murom_navigation" type="laser_footprint_filter" />

  <!-- Run the map server -->
  <arg name="map_file" default="$(find murom_navigation)/maps/willow-2010-02-18-0.10.yaml"/>
  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" />

  <!--- Run AMCL -->
  <include file="$(find murom_navigation)/config/amcl_murom.launch">
    <arg name="scan_topic" value="scan_filtered" />
  </include>

  <!--- Run Move Base -->
  <include file="$(find murom_navigation)/laser/move_base_murom_laser.launch" />

</launch>
